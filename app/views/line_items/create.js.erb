// hide any leftover flash messages
$('#notice').hide();

// use smooth animation to make the cart first appear
if ($('#cart tr').length == 1) { $('#cart').show('blind', 1000); }

// jquery to render the cart in the sidebar
$('#cart').html("<%= escape_javascript render(@cart) %>");

// Highlight a newly added item to the cart
$('#current_item').css({'background-color':'#88ff88'}).
  animate({'background-color':'#114411'}, 1000);